[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = lsb-release

[Action]
Description = Add Ctlos lsb-release
When = PostTransaction
Exec = /bin/sh -c "sed -i -e s'?^DISTRIB_ID=.*$?DISTRIB_ID=Ctlos?' -e s'?^DISTRIB_DESCRIPTION=.*$?DISTRIB_DESCRIPTION=\"Ctlos Linux\"?' /etc/lsb-release"
